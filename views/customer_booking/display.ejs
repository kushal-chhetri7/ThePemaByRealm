<script>
    function validateForm() {
        var name = document.forms["Form"]["name"].value;
        var contact = document.forms["Form"]["contact"].value;
        var email = document.forms["Form"]["email"].value;
        var adult = document.forms["Form"]["adult"].value;
        var child = document.forms["Form"]["child"].value;

        // Validate name field
        if (name === "") {
            document.getElementById("nameErr").innerHTML = "Name is required.";
            return false;
        } else if (!isNaN(parseFloat(name)) && isFinite(name)) {
            document.getElementById("nameErr").innerHTML = "Name should not be a number-only string.";
            return false;
        }
        // Validate email field
        if (email === "") {
            document.getElementById("emailErr").innerHTML = "Email is required.";
            return false;
        } else {
            // Regular expression pattern for email validation
            var emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            
            if (!emailPattern.test(email)) {
                document.getElementById("emailErr").innerHTML = "Invalid email format.";
                return false;
            }
        }

        // Validate contact number field
        if (contact === "" || contact.length < 7 || contact.length > 16) {
            document.getElementById("mobileErr").innerHTML = "Contact number should be between 7 to 15 digits";
            return false;
        }


        // Validate adult field
    if (adult === "" || isNaN(adult) || parseInt(adult) < 1) {
    document.getElementById("adultErr").innerHTML = "Please enter a valid number of adults.";
    return false;
} 
if (!/^\d+$/.test(child) || parseInt(child) < 0) {
    document.getElementById("childErr").innerHTML = "Please enter a valid number of children (must be a non-negative integer).";
    return false;
}



        return true;
    }
</script>


<script>

        //Increment and decrement counter
        function initializeRoom(roomNumber) {
            var roomContainer = document.getElementById('roomContainer-' + roomNumber);

            var decrementButton = roomContainer.querySelector('.js-decrement-guest-count');
            var adultCountInput = roomContainer.querySelector('.js-num-adults');

            decrementButton.addEventListener('click', function () {
                var currentCount = parseInt(adultCountInput.value);
                if (currentCount > 1) {
                    adultCountInput.value = currentCount - 1;
                }
            });

            var incrementButton = roomContainer.querySelector('.js-increment-guest-count');
            incrementButton.addEventListener('click', function () {
                var currentCount = parseInt(adultCountInput.value);
                if (currentCount < 3) {
                    adultCountInput.value = currentCount + 1;
                }
            });

            var decrementButtonChildren = roomContainer.querySelector('.js-decrement-children-count');
            var childrenCountInput = roomContainer.querySelector('.js-num-children');

            decrementButtonChildren.addEventListener('click', function () {
                var currentCount = parseInt(childrenCountInput.value);
                if (currentCount > 0) {
                    childrenCountInput.value = currentCount - 1;
                }
            });

            var incrementButtonChildren = roomContainer.querySelector('.js-increment-children-count');
            incrementButtonChildren.addEventListener('click', function () {
                var currentCount = parseInt(childrenCountInput.value);
                if (currentCount < 1) {
                    childrenCountInput.value = currentCount + 1;
                }
            });


            var cancelIcon = roomContainer.querySelector('.cancel-icon');
            cancelIcon.addEventListener('click', function (event) {
                event.stopPropagation(); // Stop event propagation

                var roomToRemove = document.getElementById('roomContainer-' + roomNumber);
                roomToRemove.parentNode.removeChild(roomToRemove);
            });
        }

        var roomCounter = 2; // Start with Room 2

        var addRoomButton = document.querySelector('.js-add-room');
        addRoomButton.addEventListener('click', function () {
            var roomContainer = document.createElement('div');
            roomContainer.id = 'roomContainer-' + roomCounter;
            roomContainer.className = 'clearfix additional-room-container each-room-wrapper top-border js-room-search-container';

            var cancelIcon = document.createElement('i');
            cancelIcon.className = 'cancel-icon fa fa-times-circle';
            cancelIcon.setAttribute('aria-hidden', 'true');
            cancelIcon.addEventListener('click', function (event) {
                event.stopPropagation(); // Stop event propagation

                var roomToRemove = document.getElementById('roomContainer-' + roomCounter);
                roomToRemove.parentNode.removeChild(roomToRemove);
            });

            roomContainer.appendChild(cancelIcon);

            var roomNumber = document.createElement('div');
            roomNumber.className = 'room-number col-xs-2 room-number-white';
            roomNumber.innerHTML = 'Room <span class="js-room-counter room-counter" style="color:#fff">' + roomCounter + '</span>';

            var roomWrapper = document.createElement('div');
            roomWrapper.className = 'col-xs-10 col-xs-10-wrapper';

            var roomRow = document.createElement('div');
            roomRow.className = 'row room-wrapper';

            var adultsBlock = document.createElement('div');
            adultsBlock.className = 'default-room-block';
            adultsBlock.innerHTML = '<span class="element-label adults-header" style="color:#fff"> Adults </span>' +
                '<div class="room-increment-parent js-guest-counter" style="margin-top: 20px">' +
                '<input type="button" value="-" class="num-minus js-decrement-guest-count">' +
                '<input type="text" name="quantity" value="1" data-default-value="1" class="guest-count js-guest-count js-num-adults" disabled="disabled">' +
                '<input type="button" value="+" class="num-plus js-increment-guest-count">' +
                '</div>';

            var childrenBlock = document.createElement('div');
            childrenBlock.className = 'default-room-block';
            childrenBlock.innerHTML = '<span class="element-label children-header" style="color:#fff"> Children <span class="js-children-age"> (0 - 17 years) </span></span>' +
                '<div class="room-increment-parent js-guest-counter">' +
                '<input type="button" value="-" class="num-minus js-decrement-children-count">' +
                '<input type="text" name="quantity" value="0" data-default-value="0" data-room-index="' + roomCounter + '" class="guest-count js-guest-count js-num-children" disabled="disabled">' +
                '<input type="button" value="+" class="num-plus js-increment-children-count">' +
                '</div>';

            roomRow.appendChild(adultsBlock);
            roomRow.appendChild(childrenBlock);
            roomWrapper.appendChild(roomRow);
            roomContainer.appendChild(roomNumber);
            roomContainer.appendChild(roomWrapper);

            var roomSelectionWrapper = document.querySelector('.js-rooms-container');
            roomSelectionWrapper.appendChild(roomContainer);
            roomSelectionWrapper.classList.add('center-align');

            initializeRoom(roomCounter);

            roomCounter++;
        });

        initializeRoom(1);





