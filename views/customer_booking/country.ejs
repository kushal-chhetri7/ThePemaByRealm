  function validateJournalNumber() {
    var journalNumber = document.getElementById("journalNumber").value;

    // Check if the journal number is a non-negative integer with up to 6 digits
    if (!/^\d{6,}$/.test(journalNumber)) {
      $('<div>').attr('title', 'Invalid Journal Number').text('Please enter a valid journal number.').dialog({
        modal: true,
        buttons: {
          OK: function() {
            $(this).dialog('close');
          }
        }
      });
      return false;
    }

    // If the journal number is valid, redirect to index.html
    window.location.href = "country.ejs";
  }
</script>


