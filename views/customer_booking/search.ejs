    padding: 0;
}

.navigation li {
    display: inline-block;
    margin-right: 10px;
}

.navigation li a {
    color: #fff;
    text-decoration: none;
    padding: 10px;
}
.navigation li:last-child {
    margin-right: 50px; /* Increase the margin value as needed */
}

.sidebar-toggle {
    display: block;
    font-size: 20px;
    cursor: pointer;
    position: absolute;
    top: 50%;
    right: 20px;
    transform: translateY(-50%);
    z-index: 1;
}

#sidebar {
    position: fixed;
    top: 0;
    right: -250px; /* Change 'left' to 'right' and adjust the value */
    width: 250px;
    height: 100%;
    background-color: #f7f7f7;
    padding: 20px;
    transition: right 0.3s ease; /* Change 'left' to 'right' */
    z-index: 3;
}

.sidebar-content {
    position: relative;
}


.close {
        font-size: 20px;
        cursor: pointer;
        position: absolute;
        top: 10px;
        left: 10px;
    }

    @media screen and (max-width: 768px) {
        .navigation {
            display: none;
        }

        .navigation.active {
            display: block;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #333;
            z-index: 2;
        }

        .navigation.active li {
